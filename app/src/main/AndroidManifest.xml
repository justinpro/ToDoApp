<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.justin.todoapp">

    <!-- activity 要使用没有actionbar的才行 -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".tasks.MainActivity"
            android:theme="@style/Base.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".addedittask.AddEditTaskActivity"
            android:theme="@style/Base.NoActionBar"/>

        <activity android:name=".taskdetail.TaskDetailActivity"
            android:theme="@style/Base.NoActionBar"/>
    </application>

</manifest>